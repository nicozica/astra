						<div class="col-2 text-center">
							<Image src={iconPanelone} class="img-fluid" alt="PanelOne" />
						</div><!-- /.col-2 -->
						<div class="col-10">
							<div class="card-body">
								<h2 class="card-title h3">Projects</h2>
								<ul class="list-unstyled fs-6">
									<li><a href="projects/censydiam/" class="text-decoration-none">Censydiam âš¡</a></li>
								</ul>
							</div><!-- /.card-body -->
						</div><!-- /.col-10 -->
					</div><!-- /.row -->
				</div><!-- /.card -->
			</li>

		</ul>
	</main>
</Layout>