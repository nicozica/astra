---
import Layout from "../../layouts/Layout.astro";

import HeaderVisitor from "../../components/HeaderVisitor.astro";
import Footer from "../../components/Footer.astro";

import RewardsCarousel from "../../components/nmux/RewardsCarousel.astro";
import MediaLogosCarousel from "../../components/nmux/MediaLogosCarousel.astro";
import FaqAccordion from "../../components/nmux/FaqAccordion.astro";
---

<Layout title="Product Test | Ipsos iSay">
  <HeaderVisitor />
  <!-- Main Content -->
  <div class="panel panel-gradient py-5 mb-0">
    <div class="container">
      <div class="row align-items-center">
        <!-- Text -->
        <div class="col-lg-4 order-last order-lg-first">
          <h1 class="mt-4">
            Take part in ðŸ“¦<span class="text-success">Product Testing</span> with Ipsos iSay!
          </h1>
          <p class="lead mt-4">
            Discover opportunities like testing products before they hit the shelves, and more! Join a global community
            shaping brands and services worldwide.
          </p>

          <div class="row">
            <div class="col">
              <a class="btn btn-primary btn-lg d-block d-sm-inline-block px-5 mt-4" href="javascript:void(0);" target="_blank">Join Now</a>
            </div>
          </div><!-- /.row -->
        </div>

        <!-- Image -->
        <div class="col-lg-8 order-first order-lg-last">
          <img
            src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/main-image.webp"
            class="img-fluid"
            alt=""
            aria-hidden="true"
          />
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.panel -->

  <!-- How does it work (video) -->
  <div class="panel text-center">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="dotted-heading-container">
            <h2 class="dotted-heading">How does it work?</h2>
          </div>
          <p class="mb-1">Discover more about Product Testing here</p>
        </div>
      </div><!-- /.row -->

      <div class="row pt-1 mt-5 video-container">
        <div class="col">
          <iframe
            width="560"
            height="315"
            src="https://www.youtube.com/embed/mzJj5-lubeM?si=eT5FxJ-Miuq3Eg6l"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            referrerpolicy="strict-origin-when-cross-origin"
            allowfullscreen></iframe>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.panel -->

  <!-- Your path to product testing -->
  <div class="panel text-center">
    <div class="container">
      <div class="row">
        <div class="col">
          <h2>Your path to ðŸ“¦ <span class="text-success">Product Testing</span></h2>
        </div>
      </div><!-- /.row -->

      <div class="row text-center mt-4">
        <div class="col-8 offset-2 offset-sm-0 col-sm-6 col-lg-3 mb-4">
          <div class="py-sm-4 h-100">
            <img
              src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/icon-clipboard-list-check.svg"
              class="img-fluid mt-3"
              alt=""
              aria-hidden="true"
            />
            <h3 class="h4 pt-1 mt-3">Join the test</h3>
            <p>
              Keep your profile and surveys up to date and <strong>enhance your chances</strong> of qualifying for Product
              Testing.
            </p>
          </div>
        </div>

        <div class="col-8 offset-2 offset-sm-0 col-sm-6 col-lg-3 mb-4">
          <div class="py-sm-4 h-100">
            <img
              src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/icon-shipping-fast.svg"
              class="img-fluid mt-3"
              alt=""
              aria-hidden="true"
            />
            <h3 class="h4 pt-1 mt-3">Receive the Product</h3>
            <p>
              You will receive the product along with detailed instructions and you will use it for a <strong
                >period of 14 days</strong
              >.
            </p>
          </div>
        </div>

        <div class="col-8 offset-2 offset-sm-0 col-sm-6 col-lg-3 mb-4">
          <div class="py-sm-4 h-100">
            <img
              src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/icon-product-box.svg"
              class="img-fluid mt-3"
              alt=""
              aria-hidden="true"
            />
            <h3 class="h4 pt-1 mt-3">Test it out</h3>
            <p>
              Help shaping new and exciting through product testing. <strong>Your honest feedback</strong> is crucial to
              our study.
            </p>
          </div>
        </div>

        <div class="col-8 offset-2 offset-sm-0 col-sm-6 col-lg-3 mb-4">
          <div class="py-sm-4 h-100">
            <img
              src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/icon-happy-bubble.svg"
              class="img-fluid mt-3"
              alt=""
              aria-hidden="true"
            />
            <h3 class="h4 pt-1 mt-3">Share your opinion</h3>
            <p>Share your feedback by completing the follow-up survey and <strong>receive your reward</strong>.</p>
          </div>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.panel -->

  <!-- REWARDS WITH CAROUSEL -->
  <div class="panel border-0 py-0 text-center">
    <div class="container">
      <div class="row">
        <div class="col col-lg-8 mx-auto">
          <h2 class="mb-1">Choose the perfect reward</h2>
          <p>
            Participate in surveys to earn points and redeem them for a variety of exciting rewards! Choose from popular
            gift cards or convenient prepaid cards. Youâ€™re sure to find a reward thatâ€™s just right for you.
          </p>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.panel -->
  <RewardsCarousel />

  <!-- PROMO CAROUSEL -->
  <div class="panel panel-primary-minus-2 border-0 text-center">
    <div class="container">
      <div class="row mb-4">
        <div class="col col-lg-8 mx-auto">
          <h2 class="mb-1">Ready to make an impact?</h2>
          <p>
            Get started with ðŸ“¦ <strong>Product Test</strong>!
          </p>
        </div>
      </div><!-- /.row -->
      <div class="row mt-4">
        <div class="col">
          <a class="btn btn-primary btn-lg px-5" href="javascript:void(0);" target="_blank">Join Now</a>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.panel -->

  <!-- PANEL: FAQ -->
  <div class="panel border-0">
    <div class="container">
      <div class="row">
        <div class="col col-lg-10 mx-auto">
          <div class="row">
            <div class="col-xs-12 col-lg-6">
              <p class="mt-4 mt-lg-0 mb-2 fw-bold">Frequently Asked Questions</p>
              <h2 class="mt-0">Do you have any question?</h2>
              <img
                src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/woman-phone.webp"
                class="img-fluid mt-3"
                alt=""
                aria-hidden="true"
              />
            </div>
            <div class="col-xs-12 col-lg-6 text-start" style="margin-top:35px;">
              <FaqAccordion />
            </div>
          </div>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.panel -->

  <h3 class="h6 pt-2 mt-4 text-center">See <span class="text-primary">Ipsos</span> research featured in:</h3>
  <MediaLogosCarousel />

  <!-- PANEL: Sneak Peek -->
  <div class="panel pt-0 border-0">
    <div class="container">
      <div class="row">
        <div class="col col-lg-10 mx-auto">
          <div class="row align-items-center">
            <div class="col-xs-12 col-lg-6">
              <img
                src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/man-box.webp"
                class="img-fluid"
                alt=""
                aria-hidden="true"
              />
            </div>
            <div class="col-xs-12 col-lg-6 text-start px-lg-5">
              <p class="mt-4 mt-lg-0 mb-2 fw-bold">Sneak Peek</p>
              <h2 class="mt-0">Discover tomorrow's products today</h2>
              <p class="mt-3">You get an exclusive look at new and exciting products before they hit the shelves.</p>
            </div>
          </div>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.panel -->

  <!-- PANEL: Home Testing -->
  <div class="panel border-0">
    <div class="container">
      <div class="row">
        <div class="col col-lg-10 mx-auto">
          <div class="row align-items-center">
            <div class="col-xs-12 col-lg-6 order-last order-lg-first text-start px-lg-5">
              <p class="mt-4 mt-lg-0 mb-2 fw-bold">Home Testing</p>
              <h2 class="mt-0">Experience innovation from your living room</h2>
              <p class="mt-3">
                Test them in the comfort of your home. You will receive the product along with detailed instructions.
              </p>
            </div>

            <div class="col-xs-12 col-lg-6 order-first order-lg-last">
              <img
                src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/woman-box.webp"
                class="img-fluid"
                alt=""
                aria-hidden="true"
              />
            </div>
          </div>
        </div>
      </div><!-- /.row -->
      <div class="row mt-5 text-center">
        <div class="col">
          <a class="btn btn-primary btn-lg px-5" href="javascript:void(0);" target="_blank">Join now!</a>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.panel -->

  <!-- PANEL: Your Voice Matters -->
  <div class="panel border-0">
    <div class="container">
      <div class="row">
        <div class="col col-lg-10 mx-auto">
          <div class="row align-items-center">
            <div class="col-xs-12 col-lg-6">
              <img
                src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/woman-tablet.webp"
                class="img-fluid"
                alt=""
                aria-hidden="true"
              />
            </div>
            <div class="col-xs-12 col-lg-6 text-start px-lg-5">
              <p class="mt-4 mt-lg-0 mb-2 fw-bold">Your Voice Matters</p>
              <h2 class="mt-0">Help shape better products for everyone</h2>
              <p class="mt-3">Share your feedback and help companies worldwide create better, more reliable products.</p>
            </div>
          </div>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.panel -->

  <!-- PANEL: Home Testing -->
  <div class="panel border-0">
    <div class="container">
      <div class="row">
        <div class="col col-lg-10 mx-auto">
          <div class="row align-items-center">
            <div class="col-xs-12 col-lg-6 order-last order-lg-first text-start px-lg-5">
              <p class="mt-4 mt-lg-0 mb-2 fw-bold">Earn Rewards for Your Thoughts</p>
              <h2 class="mt-0">Rewards just right for you!</h2>
              <p class="mt-3">Be rewarded for your valuable opinions and contributions to product quality testing!</p>
            </div>

            <div class="col-xs-12 col-lg-6 order-first order-lg-last">
              <img
                src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/group-boxes.webp"
                class="img-fluid"
                alt=""
                aria-hidden="true"
              />
            </div>
          </div>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.panel -->

  <!-- TESTIMONIES: Trustpilot plugin -->
  <div class="panel border-0 pb-0 text-center">
    <div class="container">
      <div class="row">
        <div class="col col-lg-8 mx-auto">
          <h2 class="mb-1">What Ipsos iSay members say?</h2>
          <p>Trusted by millions of members</p>
        </div>
      </div><!-- /.row -->

      <div class="row mt-5">
        <div class="col mx-auto">
          <!-- TrustBox widget - Carousel -->
          <div
            class="trustpilot-widget"
            data-locale="en-US"
            data-template-id="53aa8912dec7e10d38f59f36"
            data-businessunit-id="618c353f8da731d4b18a79ae"
            data-style-height="140px"
            data-style-width="100%"
            data-stars="4,5"
            data-review-languages="en"
          >
            <a href="https://www.trustpilot.com/review/www.ipsosisay.com" target="_blank" rel="noopener">Trustpilot</a>
          </div>
          <!-- End TrustBox widget -->
        </div>
      </div>
    </div><!-- /.container -->
  </div><!-- /.panel -->

  <!-- PANEL: Our priorities -->
  <div class="panel panel-primary-minus-2 text-center pb-0 mt-5">
    <div class="container">
      <div class="row">
        <div class="col">
          <h2>Our priorities</h2>
          <p>Trust is fundamental to our community, and weâ€™re dedicated to preserving it.</p>
        </div>
      </div><!-- /.row -->

      <div class="row text-center mt-4">
        <div class="col-md-4 mb-4">
          <div class="py-4 h-100">
            <img
              src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/icon-privacy.svg"
              class="img-fluid mt-3"
              alt=""
              aria-hidden="true"
            />
            <h3 class="h4 pt-1 mt-3">Your privacy is safe</h3>
            <p>
              We follow the strictest of privacy and data protection policies so that your data remains confidential and
              safe with us.
            </p>
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <div class="py-4 h-100">
            <img
              src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/icon-shield.svg"
              class="img-fluid mt-3"
              alt=""
              aria-hidden="true"
            />
            <h3 class="h4 pt-1 mt-3">We have high standards</h3>
            <p>
              We comply with international privacy standards and adhere to the most up-to-date market research
              guidelines.
            </p>
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <div class="py-4 h-100">
            <img
              src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/icon-handshake.svg"
              class="img-fluid mt-3"
              alt=""
              aria-hidden="true"
            />
            <h3 class="h4 pt-1 mt-3">Opt out at any time</h3>
            <p>Your participation is voluntary and you can request the deletion of your information at any time.</p>
          </div>
        </div>
      </div><!-- /.row -->
    </div><!-- /.container -->
  </div><!-- /.panel -->

  <div class="panel">
    <div class="container">
      <div class="row text-center">
        <div class="col">
          <a class="btn btn-primary btn-lg px-5" href="javascript:void(0);" target="_blank">Join now!</a>
        </div>
      </div><!-- /.row -->
    </div>
  </div><!-- /.row -->

  <Footer />
</Layout>

<!-- TrustBox script -->
<script type="text/javascript" src="//widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js" async></script>
<!-- End TrustBox script -->
<style>
  .video-container {
    margin-top: -30px !important;
    padding-top: 80px !important;
    background: url("https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/product-test/bg-video.webp")
      no-repeat 60px;
  }

  .video-container iframe {
    width: 386px;
    height: 217px;
  }

  @media (min-width: 576px) and (max-width: 768px) {
    .video-container iframe {
      width: 500px;
      height: 281px;
    }
  }

  @media (min-width: 768px) and (max-width: 992px) {
    .video-container iframe {
      width: 641px;
      height: 360px;
    }
  }

  @media (min-width: 992px) {
    .video-container iframe {
      width: 802px;
      height: 451px;
    }
  }
</style>
