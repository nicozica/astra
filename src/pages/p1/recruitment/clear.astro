---
import Layout from "../../../layouts/Layout.astro";

import HamburgerMenu from "../../../components/HamburgerMenu.astro";
import HeaderClear from "../../../components/HeaderClear.astro";
import FooterClear from "../../../components/FooterClear.astro";

import { Image } from "astro:assets";
import imgRewards from "../../../assets/images/p1/recruitment/landingMain.png";
---

<Layout title="Survey Experience">
  <HeaderClear />
  <HamburgerMenu />
  <!-- Main Content -->
  <div class="custom-container container-fluid vh-80">
    <div class="row h-100">
      <!-- Left Side - Large Image -->
      <div
        class="col-md-6 d-flex justify-content-center align-items-center p-0"
      >
        <div class="image-container">
          <Image
            src={imgRewards}
            class="img-fluid"
            alt="Large Landing Image"
            aria-hidden="true"
            class="img-fluid w-100 h-100 object-fit-cover curved-image"
          />
        </div>
      </div>
      <!-- Right Side - Form with custom container -->
      <div
        class="mb-4 col-md-6 d-flex justify-content-center align-items-start right-side"
      >
        <div>
          <h2 class="mb-4"></h2>
          <p class="mb-1" id="signup-text">Sign up</p>
          <p class="mb-4" id="signup-description">And have your say</p>
          <form>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="insert your email.."
              />
            </div>
            <div class="mb-3 position-relative">
              <label for="password" class="form-label">Password</label>
              <div class="password-container">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  placeholder="Create a password.."
                />
                <div id="togglePassword">
                  <i
                    class="fa fa-eye password-toggle"
                    id="eye"
                    style="cursor: pointer;"></i>
                  <i
                    class="fa fa-eye-slash password-toggle"
                    id="eyeslash"
                    style="cursor: pointer;"></i>
                </div>
              </div>
            </div>
            <div class="mb-1">
              <ul>
                <li>
                  Passwords are case-sensitive and must be at least 10
                  characters long.
                </li>
                <li>
                  They must include 1 uppercase letter, 1 lowercase letter, 1
                  special character, and 1 number.
                </li>
              </ul>
            </div>
            <div class="mt-4 mb-4">
              <hr class="custom-line" />
            </div>
            <div class="customCheckBoxWrapper">
              <div class="customCheckBox">
                <input
                  type="checkbox"
                  name="optionsRadios"
                  id="checkOther"
                  value="other"
                />
                <label for="checkOther"></label>
              </div>
              <p class="tncText">
                I have read and accept the
                <strong
                  ><a href="terms.html" target="_blank">Terms and Conditions</a
                  ></strong
                >
                and
                <strong
                  ><a href="privacy.html" target="_blank">Privacy Policy</a
                  ></strong
                >.
              </p>
            </div>
            <button type="submit" class="btn btn-primary w-100"
              >Create an account</button
            >
            <div class="signIn">
              <p class="tncText">
                Already an user?
                <strong
                  ><a href="signin.html" target="_blank">Sign in</a></strong
                >
              </p>
            </div>
          </form>
        </div>
      </div>
      <FooterClear />
    </div>
  </div>
</Layout>

<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
/>
<script
  src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/scripts/lottie-player.js"
></script>
<script
  src="https://widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js"
  async=""
  type="text/javascript"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("password");

    if (togglePassword && passwordInput) {
      togglePassword.addEventListener("click", function () {
        // Toggle the type attribute of the password field
        const type =
          passwordInput.getAttribute("type") === "password"
            ? "text"
            : "password";
        passwordInput.setAttribute("type", type);

        // Toggle the eye icon
        const eyeOpen = document.getElementById("eye");
        const eyeSlash = document.getElementById("eyeslash");

        if (type === "password" && eyeOpen && eyeSlash) {
          eyeOpen.style.visibility = "hidden";
          eyeSlash.style.visibility = "visible";
        }

        if (type === "text" && eyeOpen && eyeSlash) {
          eyeOpen.style.visibility = "visible";
          eyeSlash.style.visibility = "hidden";
        }
      });
    }
  });
</script>

<style>
  .right-side {
    padding-left: 64.5px;
  }

  /* .customCheckBox */
  .customCheckBox {
    position: relative;
    float: left;
    margin: 10px;
  }

  .customCheckBox label {
    width: 24px;
    height: 24px;
    cursor: pointer;
    position: absolute;
    top: 0;
    left: 0;
    background: #ffffff;
    border-radius: 4px;
    border: 2px solid #939096 !important;
  }

  .customCheckBox label:after {
    content: "";
    width: 10px;
    height: 7px;
    position: absolute;
    top: 4px;
    left: 4px;
    border: 3px solid #939096;
    border-top: none;
    border-right: none;
    background: transparent;
    opacity: 0;
    -webkit-transform: rotate(-45deg);
    transform: rotate(-45deg);
  }

  .customCheckBox label:hover::after {
    opacity: 0.3;
  }

  .customCheckBox input[type="checkbox"] {
    visibility: hidden;
  }

  .customCheckBox input[type="checkbox"]:checked + label:after {
    opacity: 1;
  }
  /* end .customCheckBox */

  .label-text {
    position: relative;
    left: 10px;
  }

  .customCheckBoxWrapper {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    align-content: center;
    justify-content: flex-end;
    flex-direction: row;
  }

  .tncText {
    /* width: 300px; */
