  }

  .password-toggle {
    position: absolute;
    top: 50%;
    right: 10px; /* Adjust based on design */
    transform: translateY(-50%);
    color: #6478c3; /* Customize the color */
    pointer-events: auto; /* Ensure click events are handled */
  }

  .password-toggle:hover {
    color: #6478c3; /* Customize the color */
  }

  ul {
    font-family: "Inter";
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    line-height: 18px;
    color: #767279;
  }

  .custom-line {
    opacity: 1;
    border: none;
    border-top: 3px dotted #b8b7b9;
    margin: 20px 0; /* Adjust the spacing around the line */
    width: 100%; /* Full width */
  }

  .custom-container {
    max-width: 903px;
    padding-left: 63.5px;
    padding-right: 63.5px;
    padding-top: 59px;
    height: 80vh;
  }

  .termsCheckbox label {
    width: 24px;
    height: 24px;
    cursor: pointer;
    position: absolute;
    top: 0;
    left: 0;
    background: #d7b1d7;
    border-radius: 4px;
    border: 2px solid #939096 !important;
  }

  /* Create a container with background gradient */
  .image-container {
    position: relative;
    width: 100%;
    height: 100%;
    background: url("../../../assets/images/p1/recruitment/Gradient.png")
      no-repeat center center;
    background-size: cover;
    border-radius: 20px;
  }

  /* Add border radius to the image */
  .curved-image {
    /* min-height: 300px; */
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
    mix-blend-mode: multiply; /* Apply the blend mode */
  }

  /* Ensure the image maintains some height on mobile */
  @media (max-width: 768px) {
    .image-container {
      height: auto;
      min-height: 350px;
    }

    .curved-image {
      height: auto;
      min-height: 350px;
    }

    /* Adjust padding for smaller screens */
    .custom-container {
      padding-left: 20px;
      padding-right: 20px;
      padding-top: 16px;
      height: 100vh; /* Change height to 0% of viewport on mobile */
    }
  }

  .panel.panel-default.padding-md img {
    width: 175px;
    height: 175px;
  }

  .panel {
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
  }

  .box-scroll {
    height: 250px;
    overflow-y: auto;
    border: 1px solid var(--cborder);
    border-radius: 6px;
    margin-right: 5px;
    padding: 10px;
  }

  /* css for mobile mode */
  @media screen and (max-width: 768px) {
    .custom-container {
      padding-left: 24px;
      padding-right: 24px;
    }

    .right-side {
      padding-left: 16px;
      padding-right: 16px;
    }
  }
</style>
