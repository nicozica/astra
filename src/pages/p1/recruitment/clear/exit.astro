---
import Layout from "../../../../layouts/Layout.astro";

import HeaderClear from "../../../../components/HeaderClear.astro";
import FooterClear from "../../../../components/FooterClear.astro";

import { Image } from "astro:assets";
import iconBadgeCheck from '../../../../assets/images/icons/fa-badge-check.svg';
import animConfetti from '../../../../assets/images/p1/survey/anim-confetti.gif';

import iconMemo from "../../../../assets/images/icons/fa-memo.svg";
import iconGift from "../../../../assets/images/icons/fa-gift.svg";
import iconMobileAlt from "../../../../assets/images/icons/fa-mobile-alt.svg";
---

<Layout title="Recruitment Exit · Ipsos iSay">
  <div class="container-fluid container-full-height px-0">
    <HeaderClear />

    <!-- Main Content -->
    <div class="container content py-3">
      <div class="row">
        <div class="col-12 mx-auto">
          <div class="text-center">
            <Image src={iconBadgeCheck} class="img-fluid me-1" alt="Ipsos iSay" />
            <h1 class="h3 mt-2">Well done! You are almost there</h1>
            <div class="alert alert-success mt-2 text-center">
              <p class="fs-5 mb-0 text-success-plus-2">You earned your first <i class="fa-solid fa-star text-warning"></i> <strong class="text-success-plus-2">100 points</strong>!</p>
            </div>
            <Image src={animConfetti} class="img-fluid" style="margin-top: -120px; mix-blend-mode: multiply;" aria-hidden="true" alt="" />

            <div class="row align-items-center mt-3">
              <div class="col-12 col-sm-6 text-sm-end">
                <a href="first-survey" class="btn btn-primary btn-md px-5 d-sm-inline">Next</a>
              </div>
              <div class="col-12 col-sm-6 text-sm-start">
                <a href="#" class="btn btn-sm btn-white mt-3 mt-sm-0" data-bs-toggle="modal" data-bs-target="#modalPoints">How do points work?</a>
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div><!-- /.container -->

    <FooterClear />
  </div>
</Layout>

<!-- Modal: How do points work? -->
<div class="modal fade" id="modalPoints" tabindex="-1" aria-labelledby="modalPointsLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header border-0 mt-3">
        <h5 class="modal-title h4">How do points work?</h5>
        <button type="button" class="btn-close me-3" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">

        <div class="d-flex align-items-start mt-2 mb-3">
          <Image src={iconMemo} class="icon-modal me-3" aria-hidden="true" alt="" />
          <div>
            <h3 class="h5 text-dark">Earn points</h3>
            <p class="mb-0">Take surveys to earn points. You’ll also get points when you participate in special research opportunities like product testing and live studies.</p>
          </div>
        </div>

        <div class="d-flex align-items-start my-3">
          <Image src={iconGift} class="icon-modal me-3" aria-hidden="true" alt="" />
          <div>
            <h3 class="h5 text-dark">Choose your rewards</h3>
            <p class="mb-0">Visit our rewards catalog to redeem points for your choice of exciting gift cards, cash transfers, and more!</p>
          </div>
        </div>

        <div class="d-flex align-items-start my-3">
          <Image src={iconMobileAlt} class="icon-modal me-3" aria-hidden="true" alt="" />
          <div>
            <h3 class="h5 text-dark">Get our mobile app</h3>
            <p class="mb-0">Download the Ipsos iSay mobile app to access exclusive surveys and earn even more points.</p>
          </div>
        </div>
      </div>

      <div class="modal-footer border-0 justify-content-start">
        <a type="button" class="btn btn-gray btn-block mb-1" data-bs-dismiss="modal">Got it</a>
      </div>
    </div><!-- modal-content -->
  </div><!-- modal-dialog -->
</div><!-- modal -->


<style>
  html,
  body {
    height: 100%;
  }
  .container-full-height {
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  .content {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100% !important;
  }

  .panel.panel-bg-success-minus-2 {
    background: var(--bg-success-minus-2);
  }
  .panel.panel-bg-primary-minus-2 {
    background: var(--bg-primary-minus-2);
  }

  .panel.panel-gray-minus-2 {
    background: var(--bg-gray-minus-2);
  }

  /* Modal: How do points work? */

  .icon-modal {
    width: 50px;
    height: 50px;
  }

  .modal-body h3 {
    font-weight: 600;
  }

  .modal-body p {
    font-size: 0.95rem;
  }

  .modal-body img {
    max-width: 100%;
    height: auto;
  }
</style>
