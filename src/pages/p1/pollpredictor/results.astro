---
import Layout from "../../../layouts/Layout.astro";

import HeaderSurvey from "../../../components/survey/HeaderSurvey.astro";
import FooterSurvey from "../../../components/survey/FooterSurvey.astro";
---

<Layout title="Poll Predictor Â· Ipsos iSay">
  <div class="container-fluid container-full-height px-0">
    <HeaderSurvey />
    <!-- Main Content -->
    <div class="container content">
      <div class="row">
        <div class="col-12">
          <div class="panel pt-0">
            <div class="row">
              <div class="col">

                <div class="d-flex align-items-center">
                  <img src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/icons/fa-badge-percent.svg" class="img-fluid me-1" alt="Ipsos iSay" />
                  <h1 class="h2 mt-2">Congratulations!</h1> 
                </div>
                
                <div class="alert alert-success mt-2 text-center">
                  <p class="fs-5 mb-0"><i class="fa-solid fa-star text-warning"></i> You earned <strong>15 points</strong>!</p>
                </div>
                <img src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/images/revamp/survey/anim-confetti.gif" class="img-fluid" style="margin-top: -120px; mix-blend-mode: multiply;" aria-hidden="true" alt="" />
                
                  <!-- Percentage Comparison Section -->
                  <div class="row justify-content-center align-items-center text-center mb-5">
                    <div class="col-4">
                      <div class="display-3 text-purple">30%</div>
                      <small class="text-muted">
                        <i class="bi bi-arrow-up-circle-fill text-purple"></i>
                        Your prediction
                      </small>
                    </div>
                    <div class="col-2">
                      <span class="text-muted fs-5">VS</span>
                    </div>
                    <div class="col-4">
                      <div class="display-3 text-navy">45%</div>
                      <small class="text-muted">Correct Answer (+15% diff)</small>
                    </div>
                  </div>
                
                <p>Complete all your available surveys and keep your profile updated for a daily chance of playing Poll Predictor! ðŸ˜‰</p>
              
                <div class="dotted-top mt-4">
                  <a href="javascript:void(0)" class="btn btn-primary mt-3 mb-0">Go to main page</a>
                </div>

              </div>
            </div><!-- row -->
          </div><!-- panel -->
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container -->

    <FooterSurvey />
  </div><!-- /.container-fluid -->
</Layout>

<style>
  html,
  body {
    height: 100%;
  }

  .container-full-height {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .content {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100% !important;
  }

  @view-transition {
    navigation: auto; 
  }
  
</style>
