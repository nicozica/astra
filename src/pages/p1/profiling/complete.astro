---
import Layout from "../../../layouts/Layout.astro";

import HeaderSurvey from "../../../components/survey/HeaderSurvey.astro";
import FooterSurvey from "../../../components/survey/FooterSurvey.astro";

import { Image } from 'astro:assets';
import iconBadgeCheck from '../../../assets/images/icons/fa-badge-check.svg';
import animConfetti from '../../../assets/images/p1/survey/anim-confetti.gif';
---

<Layout title="Survey Experience">
  <div class="container-fluid container-full-height px-0">
    <HeaderSurvey />
    <!-- Main Content -->
    <div class="container content">
      <div class="row">
        <div class="col-12">
          <div class="panel pt-0">
            <div class="row">
              <div class="col">

                <div class="d-flex align-items-center">
                  <Image src={iconBadgeCheck} class="img-fluid me-1" alt="Ipsos iSay" />
                  <h1 class="h2 mt-2">Congratulations! Youâ€™ve made it</h1> 
                </div>
                
                <div class="alert alert-success mt-2 text-center">
                  <p class="fs-5 mb-0"><i class="fa-solid fa-star text-warning"></i> You earned <strong>15 points</strong>!</p>
                </div>
                <Image src={animConfetti} class="img-fluid" style="margin-top: -120px; mix-blend-mode: multiply;" aria-hidden="true" alt="" />

                <hr class="dotted-line mt-0">

                <div class="row mt-3">
                  <div class="col-md-9">
                    <h2 class="h4">New <span class="text-primary">surveys</span> are ready for you</h2>
                    <p class="fs-7">Get matched with the best survey for your profile and earn up to <i class="fa-solid fa-star text-warning"></i> <strong>200 points</strong></p>
                  </div>
                  <div class="col-md-3 text-center">
                    <a href="javascript:void(0)" class="btn btn-primary">Start Survey</a>
                  </div>
                </div>

                <div class="alert alert-light align-items-center" role="alert">
                  <div class="row my-2">
                    <div class="col-sm-9">
                      <p class="h6">You have <i class="fa-solid fa-star text-warning"></i> 300 points</p>
                      <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                        <div class="progress-bar" style="width: 50%"></div>
                      </div>
                      <p class="fs-7 mt-2 mb-0">Take surveys to earn points, reach your goal, and choose your reward!</p>
                    </div>
                    <div class="col-sm-3 text-center">
                      <p class="h6">Goal:</p>
                      <span class="badge badge-over-gray text-dark fs-6 py-2"><i class="fa-solid fa-star text-warning"></i> 600 points</span>
                    </div>
                  </div>
                </div>

                <hr class="dotted-line">
                <div class="row text-center">
                  <div class="col col-md-8 mx-auto">
                    <p class="mb-2">We are missing some information to get to know you better and match you with more relevant surveys</p>
                    <a href="javascript:void(0)" class="btn btn-link text-secondary">Complete your profile</a>
                  </div>
                </div>
                <hr class="dotted-line mt-3">
                <div class="mt-3">
                  <a class="btn btn-light" data-callback="onSubmit" href="/p1/profiling/multi-choice">Go to main page</a>
                </div>
              </div>
            </div><!-- row -->
          </div><!-- panel -->
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container -->

    <FooterSurvey />
  </div><!-- /.container-fluid -->
</Layout>
<script src="https://cdn.ipsosinteractive.com/deploy/PanelOne/resources/scripts/lottie-player.js"></script>
<script>
  // Wait for the DOM to be fully loaded
  document.addEventListener("DOMContentLoaded", function () {
    // Get references to the loaded button and the loading button
    var loadedBtn = document.getElementById("loadedBtn");
    var loadingBtn = document.getElementById("loadingBtn");

    // Add an event listener to the loaded button
    loadedBtn!.addEventListener("click", function () {
      // Hide the loaded button and show the loading button
      loadedBtn!.style.display = "none";
      loadingBtn!.style.display = "block";

      // Redirect after 2 seconds
      setTimeout(function () {
        window.location.href = "/p1/survey/page1";
      }, 2000);
    });
  });
</script>

<style>
  html,
  body {
    height: 100%;
  }

  .container-full-height {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .content {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100% !important;
  }
  
</style>
