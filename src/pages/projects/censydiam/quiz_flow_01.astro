---
import Layout from '../../../layouts/Layout.astro';

import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';

// Images
import { Image } from 'astro:assets';
import imgChoice01 from '../../../assets/images/projects/censydiam/choice_01.jpg';
import imgChoice02 from '../../../assets/images/projects/censydiam/choice_02.jpg';

---
<Layout title="Choose an option">
    <Header/>
    <!-- PANEL: Quiz -->
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-6 offset-lg-1 offset-xl-3">
                
                <div class="panel panel-default text-center py-4 mt-3 mb-4">
    
                    <div class="row py-3">
                        <div class="col-12 text-center">
                            <div class="row">
                                <div class="col-xs-12 col-sm-10 offset-sm-1">
                                    <h1 class="h2 mt-1 mb-1">What is your choice?</h1>
                                    <p class="mt-1">Choose the picture that best reflects what you value in life.</p>
                        
                                </div><!-- col-xs-12 col-sm-10 offset-sm-1 -->
                            </div><!-- row -->

                            <div class="mt-1 choice">
                                <a href="/projects/censydiam/result/orange" class="choice"><Image src={imgChoice01} class="img-fluid rounded" alt="Speedometer" aria-hidden="true" /></a>
                                <a href="/projects/censydiam/result/black" class="choice"><Image src={imgChoice02} class="img-fluid rounded" alt="Eggs nest" aria-hidden="true" /></a>
                            </div>
                            <!--
                            <div class="mt-1 d-flex flex-wrap justify-content-center">
                                <div class="mx-2">
                                    <a href="/projects/censydiam/result/orange" class="choice"><Image src={imgChoice01} class="img-fluid rounded" alt="Speedometer" aria-hidden="true" /></a>
                                </div>
                                <div class="mx-2">
                                    <a href="/projects/censydiam/result/black" class="choice"><Image src={imgChoice02} class="img-fluid rounded" alt="Eggs nest" aria-hidden="true" /></a>
                                </div>
                            </div>
                            -->
                        </div><!-- row -->
                    </div><!-- row -->
    
                </div><!-- panel -->
    
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container -->
    <Footer/>
</Layout>

<!-- TrustBox script -->
<script type="text/javascript" src="//widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js" async></script>

<style>
.panel-default {
    background-color: #FFF;
    border: 1px solid #E0E0E0;
    border-radius: 12px;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.05);
}

.choice {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}

.choice a {
    flex: 1;
    max-width: 200px;
    margin: 15px;
    padding: 8px;
    text-align: center;
    border: 1px solid #E0E0E0;
    border-radius: 12px;
}

.choice a:hover {
    background-color: #DBE2FF;
    border: 1px solid #2600ff;
}

.choice img {
    width: 100%;
    height: auto;
    max-width: 100%;
}
</style>