---
import Layout from '../../../layouts/Layout.astro';

import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';

---
<Header/>
<Layout>
    <!-- PANEL: Quiz -->
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
    
                <div class="panel panel-default text-center mb-4">
    
                    <div class="row">
                        <div class="col-12 text-center">
                            <div class="row">
                                <div class="col-xs-12 col-sm-10 offset-sm-1">
                                    <h1 class="h2 mt-1 mb-1">What is your choice?</h1>
                                    <p class="mt-1">Choose the picture that best reflects what you value in life.</p>
                        
                                </div><!-- col-xs-12 col-sm-10 offset-sm-1 -->
                            </div><!-- row -->
                            
                            <div class="mt-1">
                                <a href="results_orange.html" class="choice"><img class="rounded" src="/images/projects/censydiam/choice_01.jpg" alt="Image description"></a>
                                <a href="results_orange.html" class="choice"><img class="rounded" src="/images/projects/censydiam/choice_02.jpg" alt="Image description"></a>
                            </div>	

                        </div><!-- row -->
                    </div><!-- row -->
    
                </div><!-- panel -->
    
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</Layout>
<Footer/>

<!-- TrustBox script -->
<script type="text/javascript" src="//widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js" async></script>

<style>
.panel-default {
    background-color: #FFF;
    border: 1px solid #E0E0E0;
    border-radius: 12px;
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.05);
}

a.choice {
    margin: 20px 10px;
    padding: 8px;
    border: 1px solid #E0E0E0;
    display: inline-block;
    border-radius: 12px;
}

a.choice:hover {
    background-color: #DBE2FF;
    border: 1px solid #2600ff;
}

a.choice img {
    max-width: 200px;
    height: auto;
}

</style>