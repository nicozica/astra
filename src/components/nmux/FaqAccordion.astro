<script>
  // Script to toggle the images
  document.querySelectorAll('.accordion-button').forEach(button => {
    button.addEventListener('click', function () {
      const isExpanded = this.getAttribute('aria-expanded') === 'true';

      // Update icons for all accordion items
      document.querySelectorAll('.accordion-button').forEach(otherButton => {
        const plusIcon = otherButton.querySelector('.icon-plus');
        const minusIcon = otherButton.querySelector('.icon-minus');

        if (otherButton === this) {
          // Handle the clicked button
          if (isExpanded) {
            plusIcon.classList.add('d-none');
            minusIcon.classList.remove('d-none');
          } else {
            plusIcon.classList.remove('d-none');
            minusIcon.classList.add('d-none');
          }
        } else {
          // Reset icons for other buttons
          plusIcon.classList.remove('d-none');
          minusIcon.classList.add('d-none');
        }
      });
    });
  });
</script>


